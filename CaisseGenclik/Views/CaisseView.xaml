<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:viewmodels="clr-namespace:CaisseGenclik.ViewModels" xmlns:Models="clr-namespace:CaisseGenclik.Models" x:Class="CaisseGenclik.Views.CaisseView"
        d:DataContext="{d:DesignInstance Type={x:Type viewmodels:CaisseViewModel}}"
        mc:Ignorable="d"
        Title="CaisseView"         Width="1200" 
        Height="1920">
    <Window.DataContext>
        <viewmodels:CaisseViewModel>
            <viewmodels:CaisseViewModel.SelectedArticle>
                <Models:Article/>
            </viewmodels:CaisseViewModel.SelectedArticle>
        </viewmodels:CaisseViewModel>
    </Window.DataContext>
    <Grid Width="1200" 
        Height="1920" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListBox Width="1190" 
        Height="1920" Grid.ColumnSpan="2" x:Name="list" ItemsSource="{Binding ArticlesPanier}" SelectedItem="{Binding SelectedArticle}" d:ItemsSource="{d:SampleData ItemCount=5}" HorizontalAlignment="Left" Margin="10,-26,0,26">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Width="1200" 
        Height="1920" Grid.ColumnSpan="2" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Width="500" Margin="30,30,0,0">
                        <StackPanel>
                            <TextBlock Text="{Binding Nom}" FontWeight="Bold"/>
                            <Image Source="{Binding ImagePath}" Height="100" Width="100"/>
                            <TextBlock Text="{Binding Prix, StringFormat=\{0\} €}" HorizontalAlignment="Right"/>
                            <!--<Button Command="{Binding cmdSearch}" CommandParameter="{Binding Text,ElementName=searchText}" Content="Rechercher" Name="Search" HorizontalAlignment="Left" Margin="542,105,0,0" VerticalAlignment="Top"/>-->
                            <Button x:Name="btAdd" Content="Ajouter" Command="{Binding AjouterCommand, Mode=OneWay}"  Width="100" CommandParameter="{Binding SelectedArticle}" >
                                <Button.DataContext>
                                    <viewmodels:CaisseViewModel/>
                                </Button.DataContext>
                            </Button>
                            <Button x:Name="btRemove" Content="Retirer" Command="{Binding RetirerCommand}"  Width="100" CommandParameter="{Binding SelectedArticle}" >
                                <Button.DataContext>
                                    <viewmodels:CaisseViewModel/>
                                </Button.DataContext>
                            </Button>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Grid.Column="1" Text="{Binding SoldePanier}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10"/>
    </Grid>
</Window>
