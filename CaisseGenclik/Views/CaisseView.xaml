<Window x:Class="CaisseGenclik.Views.CaisseView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:CaisseGenclik.ViewModels" 
        xmlns:uc="clr-namespace:CaisseGenclik.Views.UserControls"
        Title="CaisseView" Height="900" Width="1100">

    <Window.DataContext>
        <vm:CaisseViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Première colonne d'articles -->
        <ItemsControl Grid.Column="0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <uc:ItemArticle/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <!-- Articles de test -->
            <uc:ItemArticle/>
            <uc:ItemArticle/>
            <uc:ItemArticle/>
        </ItemsControl>

        <!-- Deuxième colonne d'articles -->
        <ItemsControl Grid.Column="1">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <uc:ItemArticle/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <!-- Articles de test -->
            <uc:ItemArticle/>
            <uc:ItemArticle/>
            <uc:ItemArticle/>
        </ItemsControl>
        <!-- Affichage du total du panier -->
        <TextBlock Grid.Column="1" Text="{Binding SoldePanier}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10"/>
    </Grid>
</Window>
